<Window x:Class="WPF_Lesson5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lesson5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <Button 
            Margin="50 50 50 0" 
            Content="Modify value"
            Click="Button_Click"
            />
        <Label  HorizontalAlignment="Center" x:Name="mylbl2"
                Content="{Binding MyNumber.Number}"
               Margin="0 50 0 0"></Label>
        <Label  HorizontalAlignment="Center" x:Name="mylbl3"
                Content="{Binding MyNumber.Number2}"
               Margin="0 50 0 0"></Label>

        <Label  HorizontalAlignment="Center" x:Name="lblBrand"
                Content="{Binding MyMobilePhone.Brand}"
               Margin="0 50 0 0"></Label>
        <Label  HorizontalAlignment="Center" x:Name="lblModel"
                Content="{Binding MyMobilePhone.Model}"
               Margin="0 20 0 0"></Label>
        <Label  HorizontalAlignment="Center" x:Name="lblColor"
                Content="{Binding MyMobilePhone.Color}"
               Margin="0 20 0 0"></Label>
    </StackPanel>

</Window>
